.navbar-right(ng-controller="AccountController")
    form.navbar-form(ng-hide="identity.isAuthenticated()")
        .form-group
            input.form-control(placeholder="Email", ng-model="user.username")
        .form-group
            input.form-control(placeholder="Password", type="password", ng-model="user.password")
        button.btn.btn-primary(ng-click="signIn()") Singn In
    ul.nav.navbar.navbar-right(ng-show="identity.isAuthenticated()")
        li.dropdown
            a.dropdown-toggle(href="" data-toggle="dropdown")
                | {{identity.currentUser.firstName + " " + identity.currentUser.lastName}}
                b.caret
            ul.dropdown-menu
                li(ng-show="identity.currentUser.isAdmin()")
                    a(href='/admin/users') User Admin
                li
                    a(href="", ng-click="logOut()") Sign Out
